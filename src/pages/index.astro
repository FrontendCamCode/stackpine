      <p class="font-semibold">Jump through the 100 sales sections by phase:</p>
      <div class="mt-3 grid sm:grid-cols-2 lg:grid-cols-5 gap-2">
        {sectionGroups.map((group) => (
          <a href={`#${group.anchor}`} class="text-sm border border-separator rounded-lg px-3 py-2 hover:bg-black/5 transition-colors">
            <span class="font-medium">{group.label}</span>
            <span class="block text-tertiary">{group.title}</span>
          </a>
        ))}
      </div>
    </section>

    <section class="mt-8 space-y-5">
      {sections.map((s) => (
        <section id={`section-${s.id}`} class="rounded-3xl bg-white shadow-natural border border-separator p-6 sm:p-8">
          <div class="flex flex-wrap items-center gap-2">
            <span class="text-xs uppercase tracking-wide text-tertiary font-semibold">{s.phase.name}</span>
            <span class="text-xs px-2 py-1 rounded-full bg-[rgb(250,250,250)] border border-separator">#{String(s.id).padStart(2, '0')}</span>
          </div>

          <h2 class="mt-3 text-2xl sm:text-3xl font-bold tracking-tight">{s.title}</h2>
          <p class="mt-3 text-secondary text-base sm:text-lg">{s.lead}</p>
          <p class="mt-2 text-secondary text-base sm:text-lg">{s.body}</p>

